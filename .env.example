# Elo Dental Clinic - Environment Configuration
# Copy this file to .env and update with your actual values

# ==============================================================================
# LIVEKIT CONFIGURATION
# ==============================================================================
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# ==============================================================================
# AI/LLM API CONFIGURATION
# ==============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_API_KEY=your_google_api_key_here

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DB_PATH=clinic.db
DB_ECHO=false

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
SECURITY_MAX_CALLS_PER_HOUR=30
SECURITY_CALL_DURATION_LIMIT=300

# ==============================================================================
# CLINIC CONFIGURATION
# ==============================================================================
CLINIC_NAME=Romi Dental Clinic
CLINIC_LOCATION=Albania
CLINIC_CONSULTATION_FEE=50.0

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=elo_clinic.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# ==============================================================================
ENVIRONMENT=development

# ==============================================================================
# OPTIONAL CONFIGURATIONS
# ==============================================================================
# Uncomment and configure as needed

# Email configuration (for future email notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# SMS configuration (for future SMS notifications)
# SMS_API_KEY=your-sms-api-key
# SMS_SENDER_NAME=RomiDental

# Analytics configuration
# ANALYTICS_ENABLED=true
# ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com
